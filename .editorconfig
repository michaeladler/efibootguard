# This file is meant to set up your editor, see https://editorconfig.org.
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 8

[{Makefile,*.am}]
indent_style = tab
indent_size = tab
trim_trailing_whitespace = true
max_line_length = 80

[*.{c,cpp,h}]
indent_style = tab
indent_size = tab
trim_trailing_whitespace = true
max_line_length = 80

[configure.ac]
indent_style = tab
indent_size = tab
tab_width = 8
trim_trailing_whitespace = true
max_line_length = 100
